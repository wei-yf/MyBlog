@using MyBlog.Areas.MyBlog.Models;
@model IEnumerable<Article>

<script src="~/Scripts/Editor/JS/my.js"></script>


<div id="ajax-test">
    <table class="am-table am-table-striped am-table-hover">
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayName("标题")
            </th>
            <th>
                @Html.DisplayName("标签")
            </th>
            <th>
                @Html.DisplayName("描述")
            </th>
        </tr>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>
                        @*<a href="#" class="am-active" onclick="edit(@v.Id)"></a>*@
                        @Ajax.ActionLink("编辑", "edit", "blog", new { id = @v.Id }, new AjaxOptions { HttpMethod = "get", UpdateTargetId = "ajax-test", InsertionMode = InsertionMode.ReplaceWith });
                    </td>
                    <td>
                        <a href="#" class="am-active" onclick="del(@v.Id)">删除</a>
                    </td>
                    <td>
                        @Html.DisplayFor(t => v.Theme)
                    </td>
                    <td>
                        @Html.DisplayFor(t => v.Tag)
                    </td>
                    <td>
                        @Html.DisplayFor(t => v.Describe)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

